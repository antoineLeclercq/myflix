%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      .col-sm-4
        = bootstrap_form_tag(url: sign_in_path) do |f|
          %header
            %h1 Sign in
          = f.email_field :email, label: 'Email Address'
          = f.password_field :password
          = f.form_group do
            = f.submit 'Sign In'
            = link_to 'Forgot Password?', forgot_password_path