- with_creator ||= false
- with_video ||= false
- if review.body.present?
  %article.review
    %li.row
      .col-sm-2
        - if with_video
          %p= link_to review.video.title, video_path(review.video)
        %span
          %strong Rating: #{review.rating} / 5
        - if with_creator
          %p
            by
            = link_to review.creator.full_name, user_path(review.creator)
      .col-sm-8
        %p #{review.body}