%section#top-header.navbar.navbar-default
  .container-fluid
    .navbar-header
      = link_to "MyFLiX", home_path, class: 'navbar-brand'
    - if logged_in?
      %ul.nav.navbar-nav
        %li= link_to "Videos", home_path
        %li= link_to "My Queue", my_queue_path
        %li= link_to "People"
      = form_tag search_videos_path, method: 'get', class: 'navbar-form navbar-left' do
        .form-group
          = text_field_tag :search_term, '', class: 'form-control', placeholder: 'Search for videos here'
        = button_tag 'Search', class: 'btn btn-default'
      #user_links.pull-right
        %ul.nav.navbar-nav
          %li.dropdown
            %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")<
              Welcome, #{current_user.full_name}
              %i.caret>
            %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
              %li
                %a(href="#") Account
                %a(href="#") Plan and Billing
                = link_to 'Sign Out', sign_out_path, method: 'post'