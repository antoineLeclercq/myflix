%script(type="text/javascript" src="https://js.stripe.com/v3/")
= javascript_include_tag 'payments'
%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for(@user, layout: :horizontal, control_col: 'col-sm-6', id: 'payment-form') do |f|
        %header
          %h1 Register
        = hidden_field_tag :invitation_token, @invitation_token if @invitation_token
        = f.email_field :email, label: 'Email Address'
        = f.password_field :password
        = f.text_field :full_name, label: 'Full Name'
        %fieldset.credit_card
          #card-errors
          .form-group
            %label.control-label.col-sm-2 Payment Method
            .col-sm-6
              #card-element

        = f.form_group do
          = f.submit 'Sign Up'